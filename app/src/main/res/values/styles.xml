        <item name="rain">@color/rain_blue</item>
        <item name="storm">@color/storm</item>
        <item name="snow">@color/frontColorLight</item>

        <item name="AlertBackground">@color/colorPrimaryLight</item>
        <item name="bg_gradient">@drawable/bg_gradient_light</item>
        <item name="bg_round">@drawable/bg_round_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
